<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Roles</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/layuiadmin/style/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-form layui-card-header layuiadmin-card-header-auto layui-hide">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <button class="layui-btn layuiadmin-btn-admin" data-type="add">
                            <i class="layui-icon layui-icon-add-1 layuiadmin-button-btn"></i>
                            添加角色
                        </button>
                    </div>
                </div>
            </div>
            <div class="layui-card-body">
                <table id="LAY-user-back-role" lay-filter="LAY-user-back-role"></table>
                <script type="text/html" id="permission">
                    {{#  layui.each(d.permissionList, function(index, item){ }}
                    <button class="layui-btn layui-btn-primary layui-btn-xs">{{ item.permissionDescribe }}</button>
                    {{#  }); }}
                </script>
                <script type="text/html" id="table-useradmin-admin">
                    <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit"><i class="layui-icon layui-icon-edit"></i>编辑</a>
                    {{#  if(d.id == 10000){ }}
                    <a class="layui-btn layui-btn-danger layui-btn-disabled layui-btn-xs"><i class="layui-icon layui-icon-delete"></i>删除</a>
                    {{#  } else { }}
                    <a class="layui-btn layui-btn-danger layui-btn-disabled layui-btn-xs"><i class="layui-icon layui-icon-delete"></i>删除</a>
                    {{#  } }}
                </script>
            </div>
        </div>
    </div>
    <script src="~/layuiadmin//layui/layui.js"></script>
    <script>
        layui.config({
            base: '../layuiadmin/'
        }).extend({
            index: 'lib/index'
        }).use(['index', 'useradmin', 'table'], function () {
            var $ = layui.$
                , form = layui.form
                , table = layui.table;
            var active = {
                add: function () {
                    layer.open({
                        type: 2
                        , title: '添加新角色'
                        , content: '@Url.Action("AddRole", "Account")'
                        , area: ['400px', '300px']
                    });
                }
            }
            $('.layui-btn.layuiadmin-btn-role').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });
    </script>
</body>
</html>